{
  "name": "xmoji",
  "version": "1.0.0",
  "description": "Chrome Extension: Slack-style emoji shortcodes for X (Twitter)",
  "private": true,
  "scripts": {
    "build:data": "node scripts/build-emoji-data.js",
    "build:content": "node scripts/build-content.js",
    "build:copy": "node scripts/build.js",
    "build": "npm run build:data && npm run build:content && npm run build:copy",
    "clean": "rm -rf dist",
    "dev": "npm run build && node scripts/watch.js",
    "generate:promo": "node scripts/generate-promo-assets.js"
  },
  "devDependencies": {
    "emoji-datasource": "^16.0.0",
    "esbuild": "^0.24.0",
    "puppeteer": "^24.37.5"
  }
}
